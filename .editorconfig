root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2

[*.{ts,tsx,js,jsx}]
quote_type = single
spaces_around_operators = true
spaces_around_brackets = false
indent_style = tab
indent_size = 2
max_line_length = 120
curly_bracket_next_line = false
continuation_indent_size = 2
continuation_indent_style = tab

[*.{json,yml,yaml,html,css,scss}]
quote_type = double
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
